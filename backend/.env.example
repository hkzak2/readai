# Server Configuration
NODE_ENV=development
PORT=3001

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173,http://127.0.0.1:5174,http://localhost:4173

# Request Limits
MAX_REQUEST_SIZE=10mb
MAX_TEXT_LENGTH=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1000

# Logging
LOG_LEVEL=info
